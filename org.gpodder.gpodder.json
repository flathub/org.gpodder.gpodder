{
  "app-id": "org.gpodder.gpodder",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "gpodder",
  "rename-icon": "gpodder",
  "copy-icon": true,
  "rename-desktop-file": "gpodder.desktop",
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--own-name=org.gpodder",
    "--talk-name=org.gtk.vfs.*",
    "--filesystem=home"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    "python3-requirements.json",
    "shared-modules/libappindicator/libappindicator-gtk3-introspection-12.10.json",
    {
      "name": "dbus-python",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://dbus.freedesktop.org/releases/dbus-python/dbus-python-1.4.0.tar.xz",
          "sha256": "c36b28f10ffcc8f1f798aca973bcc132f91f33eb9b6b8904381b4077766043d5"
        }
      ]
    },
    {
      "name" : "quickjs",
      "buildsystem" : "simple",
      "build-commands" : [
        "make -j$(nproc)",
        "strip qjs",
        "cp qjs /app/bin"
      ],
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://bellard.org/quickjs/quickjs-2025-09-13-2.tar.xz",
          "sha256" : "996c6b5018fc955ad4d06426d0e9cb713685a00c825aa5c0418bd53f7df8b0b4"
        }
      ]
    },
    {
      "name": "gpodder",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/gpodder/gpodder/archive/refs/tags/3.11.5.tar.gz",
          "sha256": "c09de56290589f5d66592d79acdfb8b70e76deab6df590715e4556c6d2d2068c"
        },
        {
          "type": "patch",
          "path": "update-flathub-metainfo.patch"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=$FLATPAK_DEST",
        "mv $FLATPAK_DEST/share/applications/gpodder-url-handler.desktop $FLATPAK_DEST/share/applications/$FLATPAK_ID.gpodder-url-handler.desktop",
        "rm -fr $FLATPAK_DEST/share/icons/hicolor/16x16/apps/gpodder.ico",
        "touch $FLATPAK_DEST/share/gpodder/no-update-check"
      ]
    }
  ]
}
