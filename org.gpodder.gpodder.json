{
  "app-id": "org.gpodder.gpodder",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "command": "gpodder",
  "rename-icon": "gpodder",
  "copy-icon": true,
  "rename-desktop-file": "gpodder.desktop",
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--own-name=org.gpodder",
    "--talk-name=org.gtk.vfs.*",
    "--filesystem=home"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    "python3-requirements.json",
    "shared-modules/libappindicator/libappindicator-gtk3-introspection-12.10.json",
    {
      "name": "dbus-python",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://dbus.freedesktop.org/releases/dbus-python/dbus-python-1.3.2.tar.gz",
          "sha256": "ad67819308618b5069537be237f8e68ca1c7fcc95ee4a121fe6845b1418248f8"
        }
      ]
    },
    {
      "name": "gpodder",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/gpodder/gpodder/archive/refs/tags/3.11.1.tar.gz",
          "sha256": "c24fb3ef70b5acf43c07e6dd4e78c309e1cbacff621eb59f73c137b9597c6e87"
        },
        {
          "type": "patch",
          "path": "0001-appdata-Fix-syntax-add-3.9-series-release-dates.patch"
        },
        {
          "type": "patch",
          "path": "0002-appdata-Add-release-3.11.1.patch"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "make install PREFIX=$FLATPAK_DEST",
        "mv $FLATPAK_DEST/share/applications/gpodder-url-handler.desktop $FLATPAK_DEST/share/applications/$FLATPAK_ID.gpodder-url-handler.desktop",
        "rm -fr $FLATPAK_DEST/share/icons/hicolor/16x16/apps/gpodder.ico"
      ]
    }
  ]
}
